---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

type Props = {
  title: string;
  description: string;
  imgUrl: string;
};

const { title, description, imgUrl } = Astro.props;
---

<Card>
  <CardHeader>
    <CardTitle className="mb-4">{title}</CardTitle>
    <CardContent className="p-0" style={{ marginBottom: 8 }}>
      <img
        src={imgUrl}
        alt={`Image of someone doing ${title}`}
        width={"100%"}
        height={"auto"}
      />
    </CardContent>
    <CardDescription>
      {description}
    </CardDescription>
    <!-- <CardFooter> -->
    <!--   <p>Card Footer</p> -->
    <!-- </CardFooter> -->
  </CardHeader>
</Card>
